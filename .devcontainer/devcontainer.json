    "name": "Python with Node.js",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "remoteUser": "vscode",
    "forwardPorts": [],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "bradlc.vscode-tailwindcss",
                "heybourn.headwind",
                "dsznajder.es7-react-js-snippets",
                "redhat.vscode-yaml",
                "ms-python.python",
                "EQuimper.react-native-react-redux"
            ]
        }
    }
}
