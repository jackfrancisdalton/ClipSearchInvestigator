{
  "compilerOptions": {    
      "lib": ["dom", "dom.iterable", "esnext"],    
      "target": "ESNext",    
      "types": ["vite/client"],
      "isolatedModules": true,
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}